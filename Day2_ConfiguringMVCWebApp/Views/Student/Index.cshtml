
@{
    ViewData["Title"] = "Index";
}

<a asp-controller = "Student" asp-action = "Create" class = "btn btn-secondary">Add Student</a>
<h1>@ViewBag.Message</h1>

<p>There are total @ViewBag.StudentCount in this competition.</p>
<br />

<table class="table table-striped table-primary">
    <thead>
        <tr>
            <th>Student Id</th>
            <th>Name</th>
            <th>Gender</th>
            <th>City</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var student in ViewBag.StudentList)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Gender</td>
                <td>@student.City</td>
            </tr>
        }
    </tbody>
</table>

